<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Attendance:"
        android:textSize="20dp"
        android:layout_margin="20dp"
        android:id="@+id/adv"
        ></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mr.x,mr.y"
        android:layout_toRightOf="@+id/adv"
        android:id="@+id/faculties"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:textSize="20dp"></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REFERENCE BOOKS:"
        android:layout_margin="20dp"
        android:id="@+id/ref"
        android:layout_below="@+id/adv"></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1. REF1\n2. REF2\n1. REF1\n2. REF2\n1. REF1\n2. REF2"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:id="@+id/books"
        android:layout_below="@+id/ref">

    </TextView>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/books"
        android:layout_margin="50dp"
        android:text="Notes">

    </Button>


</RelativeLayout>